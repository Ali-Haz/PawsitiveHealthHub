@model PawsitiveHealthHub.Models.Pets

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Pet Profile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Owner</dt>
        <dd class="col-sm-10">
            @Model.Owner.FirstName @Model.Owner.LastName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PetName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PetName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Species)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Species)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AgeYears)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AgeYears)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AgeMonths)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AgeMonths)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AgeDays)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AgeDays)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PetID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
