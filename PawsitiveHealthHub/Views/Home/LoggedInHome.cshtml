@using Microsoft.AspNetCore.Identity
@using PawsitiveHealthHub.Areas.Identity.Data
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Gets the logged-in user's first name
    string firstName = "";
    if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            firstName = user.FirstName;
        }
    }
}

    <style>
        body {
            background-color: #15263b;
        }

        .homepage-section {
            border: 1px solid white;
            padding: 2rem;
            margin-bottom: 1.5rem;
            border-radius: 0.5rem;
        }

            .homepage-section h1,
            .homepage-section h2 {
                color: white;
            }

            .homepage-section p {
                color: #f0f0f0;
            }
    </style>
}

<div class="container py-5">
    <!-- Welcome Banner -->
    <div class="homepage-section">
        <h1>Welcome back, @firstName!</h1>
        <p>Glad to see you again at Pawsitive Health Hub.</p>
    </div>

    <!-- Upcoming Appointments -->
    <div class="homepage-section">
        <h2>Upcoming Appointments</h2>
        <p>No upcoming appointments to display.</p>
    </div>

    <!-- Recent Medical Records -->
    <div class="homepage-section">
        <h2>Recent Medical Records</h2>
        <p>No recent medical records available.</p>
    </div>

    <!-- Pet Care Tips / Announcements -->
    <div class="homepage-section">
        <h2>Pet Care Tips</h2>
        <p>Remember to brush your pet's teeth weekly and provide plenty of fresh water. Regular exercise keeps your pets happy and healthy.</p>
    </div>
</div>
