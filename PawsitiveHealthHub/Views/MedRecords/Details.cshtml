@model PawsitiveHealthHub.Models.MedRecords
@using Microsoft.AspNetCore.Identity
@using PawsitiveHealthHub.Areas.Identity.Data
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isVet = User.IsInRole("Vet");
}

<h1>Details</h1>

<div>
    <h4>Medical Records</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Pet</dt>
        <dd class="col-sm-10">@Model.Pet?.PetName</dd>

        <dt class="col-sm-2">Vet</dt>
        <dd class="col-sm-10">@("Dr. " + Model.Vet?.LastName)</dd>

        <dt class="col-sm-2">Diagnosis</dt>
        <dd class="col-sm-10">@Model.Diagnosis</dd>

        <dt class="col-sm-2">Treatment</dt>
        <dd class="col-sm-10">@Model.Treatment</dd>
    </dl>
</div>
<div>
    @if (isVet)
    {
    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.RecordID">Edit</a>
      
        }
    <a class="btn btn-sm btn-secondary" asp-action="Index">Back to List</a>
</div>
