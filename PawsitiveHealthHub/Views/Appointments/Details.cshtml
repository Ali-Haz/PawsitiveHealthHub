@model PawsitiveHealthHub.Models.Appointments

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Appointment Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Owner</dt>
        <dd class="col-sm-10">
            @Model.Owner.FirstName @Model.Owner.LastName
        </dd>

        <dt class="col-sm-2">Pet</dt>
        <dd class="col-sm-10">
            @Model.Pet.PetName
        </dd>

        <dt class="col-sm-2">Vet</dt>
        <dd class="col-sm-10">
            Dr. @Model.Vet.LastName
        </dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("dd/MM/yyyy hh:mm tt")
        </dd>

        <dt class="col-sm-2">Reason</dt>
        <dd class="col-sm-10">
            @Model.Reason
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.AppointmentID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
