@model PawsitiveHealthHub.Models.Appointments

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Appointment</h1>

<h3>Are you sure you want to delete this appointment?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Owner</dt>
        <dd class="col-sm-10">
            @Model.Owner.FirstName @Model.Owner.LastName
        </dd>

        <dt class="col-sm-2">Pet</dt>
        <dd class="col-sm-10">
            @Model.Pet.PetName
        </dd>

        <dt class="col-sm-2">Vet</dt>
        <dd class="col-sm-10">
            Dr. @Model.Vet.LastName
        </dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("dd/MM/yyyy hh:mm tt")
        </dd>

        <dt class="col-sm-2">Reason</dt>
        <dd class="col-sm-10">
            @Model.Reason
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AppointmentID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

