@model IEnumerable<PawsitiveHealthHub.Models.Appointments>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Appointments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Pet?.PetName
                </td>
                <td>
                    @("Dr. " + item.Vet?.LastName)
                </td>
                <td>
                    @item.Date.ToString("g") <!-- Date formatting -->
                </td>
                <td>
                    @item.Reason
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AppointmentID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AppointmentID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AppointmentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
